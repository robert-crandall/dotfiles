#!/usr/bin/env bash
#
# This is run on every Codespaces startup. See install_mac for the Mac version.
set -euo pipefail

# If chezmoi isn't applying this, you can remove the local cache with:
#   rm -rf ~/.local/share/chezmoi
#   rm -rf ~/.config/chezmoi
#   rm -rf ~/.cache/chezmoi

if ! chezmoi="$(command -v chezmoi)"; then
  # Apply local directory with 
  #   sh -c "$(curl -fsLS get.chezmoi.io)" -- init --apply "$PWD"
  # bin/chezmoi init --apply "$PWD"
  sh -c "$(curl -fsLS get.chezmoi.io)" -- init --apply robert-crandall 
fi
